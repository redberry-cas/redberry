            <id>PoslavskySV</id>
            <email>stvlpos@mail.ru</email>
            <name>Poslavsky Stanislav</name>
            <organization>IHEP</organization>
            <organizationUrl>http://ihep.su</organizationUrl>
            <roles>
                <role>architect</role>
                <role>developer</role>
                <role>tester</role>
            </roles>
            <timezone>UTC+04:00</timezone>
            <url>https://bitbucket.org/PoslavskySV</url>
